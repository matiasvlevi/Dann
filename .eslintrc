{
  "env": {
    "node": true,
    "browser": true,
    "amd": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-cond-assign": [2, "except-parens"],
    "eqeqeq": ["error", "smart"],
    "no-use-before-define": [
      2,
      {
        "functions": false
      }
    ],
    "new-cap": 0,
    "no-caller": 2,
    "no-undef": 0,
    "no-unused-vars": ["off", { "vars":"local","args": "none"}],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-console": "off"
  }
}